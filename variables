variable "ami_id" {
  description = "AMI ID for the EC2 instance"
  type        = string
}

variable "instance_type" {
  description = "Instance type (e.g., t3.micro)"
  type        = string
}

variable "subnet_id" {
  description = "Subnet ID to launch the instance in"
  type        = string
}

variable "vpc_id" {
  description = "VPC ID where the instance resides"
  type        = string
}

variable "key_name" {
  description = "Key pair name for SSH access"
  type        = string
}

variable "instance_name" {
  description = "Name tag for the instance"
  type        = string
}

variable "associate_public_ip" {
  description = "Whether to associate a public IP (true for public subnet, false for private)"
  type        = bool
  default     = false
}

variable "ssh_allowed_cidrs" {
  description = "List of CIDR blocks allowed to SSH into the instance"
  type        = list(string)
}

variable "tags" {
  description = "Common tags to apply"
  type        = map(string)
  default     = {}
}
